<div>


    {{#with main}}
    <main>
        <section>
            {{> title data="My education" big=true}}
            <ul>
                {{#each education}}
                <li>
                    {{name}}

                    {{#if isEnd}} (finished) {{/if}}
                    {{#unless isEnd}} (Maybe in the future) {{/unless}}

                </li>
                {{/each}}
            </ul>
        </section>

        <section>
            {{> title data="My certificates" big=true}}
            <ul>
                {{#each certificates}}
                <li>
                    {{name}}
                    {{#if id}} ({{id}}) {{/if}}


                </li>
                {{/each}}
            </ul>
        </section>

    </main>
    {{/with}}


</div>